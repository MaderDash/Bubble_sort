// This is the array for the data. Make it as large as you need.
#define NUMBER_OF_SAMPLES 10
byte randomList[NUMBER_OF_SAMPLES] = {0}; 
void setup(){
  Serial.begin(9600);
  Serial.println("starting");
  delay(1000);
}

// This is for demo, it creates a random set of numbers and populates the randomList array.
void createRandomList() {
  for (byte count = 0; count < NUMBER_OF_SAMPLES; count++) {
    randomList[count] = random(0, 100);
  }
  for (byte count = 0; count < NUMBER_OF_SAMPLES; count++) {
    Serial.print(randomList[count]);
    Serial.print(" ");
  }
  Serial.println("this is the list of random numbers");
  delay(1000);
}
// This is where the work is done.
void sort() {
  for (byte iterator = 0; iterator < NUMBER_OF_SAMPLES; iterator++) {
    for (byte count = (NUMBER_OF_SAMPLES - 1) ; count > 0 + iterator; count--) {
      if (randomList[count] < randomList[count - 1]) {
        int hold = randomList[count - 1];
        randomList[count - 1] = randomList[count];
        randomList[count] = hold;
      }
    }
  }
}
// This is just to see the data.
void testPrint(){
  for (byte count = 0; count < NUMBER_OF_SAMPLES; count++) {
    Serial.print(randomList[count]);
    Serial.print(" ");
  }
  Serial.println("This is the sorted list.");
}


void loop() {
  createRandomList(); // <<<<<<<<======This can be removed
  sort();
  testPrint();        // <<<<<<<<======This will be for testing, can be removed.
  delay(1000);
}
